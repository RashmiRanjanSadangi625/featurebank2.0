<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Dynamic Quote API</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="css/montserrat-font.css">
	<link rel="stylesheet" type="text/css" href="fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
	<!-- Main Style Css -->
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <!-- {{>style}} -->
    <style>
    	.quotes
    	{
    		background-color: #3A3E59;
    		padding: 10px;
    		height: 50px;
    		color: #fff;
    		display: flex;
    		align-items: center;
    		justify-content: center;
    	}
    	.btn
    	{
    		margin: 10px;
    		padding:10px;
    		background-color: #ED6B5B;
    		color: #fff;
    		border: none;
    		border-radius: 5px;
    		cursor: pointer;
    		font-size: 18px;

    	}
    </style>
</head>
{{>navbarsub}}
<body class="form-v10">
	<div class="page-content">
		<div class="form-v10-content"  style="background-color: #3A3E59;color: #fff;padding: 10px;">
			<h2 style="text-align: center;">Dynamic Quote API</h2>
			<div class="quotes" id="quotes">
				
			</div>
			<div class="form-row-last">
				<button class="btn" id="btn">New Quotes</button>
			</div>
		</div>
	</div>
	<script>
		var quotes= document.getElementById("quotes");
		var btn= document.getElementById("btn");

		let orgdata='';

		//for making dynamic
		const getNewQuotes = () =>
		{
			let rnum = Math.floor(Math.random() * 10);
			quotes.innerText = `${orgdata[rnum].text}`;
		}

		//for fetching data
		const getQuotes = async() =>
		{
			const api="https://type.fit/api/quotes";
			try
			{
				let data = await fetch(api);
				orgdata=await data.json();
				getNewQuotes();
				// console.log(orgdata.length);
			} 
			catch(error){}
		}
		getQuotes();

		//refresh quotes on click
		btn.addEventListener("click",getNewQuotes);


	</script>
</body>
</html>